@model List<Business.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-3">
            <!-- Back button to go back to the menu -->
            <a href="@Url.Action("Index", "Help")" class="btn btn-secondary">Back</a>
        </div>
        <div class="col-md-6 text-center">
            <!-- Search form centered -->
            <form asp-action="MyTickets" method="get" class="mb-0">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchTerm" placeholder="Search by Title">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3 text-right">
            <!-- Register a New Employee button -->
            <a href="@Url.Action("TicketCrea", "Help")" class="btn btn-success">Create a New Ticket</a>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header"> My Tickets</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Priority</th>
                        <th>#Ticket</th>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Issue</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.Where(t => t.senderID == ViewBag.UserID).OrderBy(t => t.Priority))
                    {
                        <tr>
                            <td>
                                @{
                                    string priorityText = "";
                                    switch (@ticket.Priority)
                                    {
                                        case 1:
                                            priorityText = "Low";
                                            break;
                                        case 2:
                                            priorityText = "Medium";
                                            break;
                                        case 3:
                                            priorityText = "High";
                                            break;
                                        default:
                                            priorityText = "Unknown"; // Optional: Provide a default value
                                            break;
                                    }
                                }
                                @priorityText
                            </td>
                            <td>#@ticket.Id</td>
                            <td>@ticket.Title</td>
                            <td>@ticket.Type</td>
                            <td>@ticket.Issue</td>
                            <td><a href="@Url.Action("EditTicket", "Help", new { TicketId = ticket.Id })" class="edit-button">Edit</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
